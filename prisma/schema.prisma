model User {
  id        String      @id @default(uuid())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  password  String
  posts     Post[]
}

model Post {
  postId        String      @id @default(uuid())
  createdAt DateTime @default(now())
  published Boolean  @default(false)
  title     String
  author    User    @relation(fields: [postId], references: [id], onDelete: Cascade)
}
